[package]
name = "aura-recovery"
version.workspace = true
edition.workspace = true
rust-version.workspace = true
authors.workspace = true
license.workspace = true
repository.workspace = true

[dependencies]
aura-core = { path = "../aura-core" }
aura-mpst = { path = "../aura-mpst" }
aura-verify = { path = "../aura-verify" }
aura-authenticate = { path = "../aura-authenticate" }
aura-wot = { path = "../aura-wot" }
aura-crypto = { path = "../aura-crypto" }
aura-frost = { path = "../aura-frost" }
aura-protocol = { path = "../aura-protocol" }
rumpsteak-aura = { git = "https://github.com/hxrts/rumpsteak-aura" }
serde = { version = "1.0", features = ["derive"] }
serde_json = "1.0"
thiserror = "2.0"
tracing = "0.1"
async-trait = "0.1"
uuid = { version = "1.0", features = ["v4", "serde"] }
